<%= form_for @report, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being generated</h2>

      <ul>
	<% @report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
	<% end %>
      </ul>
    </div>
  <% end %>

  <div class="controls">
    <%= f.label :employees, :class => 'control-label' %>
    <%= f.text_field :employees, active_employees, :id, :name, {:class => 'form-control', :multiple => true}%>
  </div>

  <div class="controls">
    <%= f.label :date_start, :class => 'control-label'%>
    <%= f.text_field :date_start, :class => 'form-control'%>
  </div>

  <div class="controls">
    <%= f.label :date_end, :class => 'control-label'%>
    <%= f.text_field :date_end, :class => 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
  </div>

<% end %>
